<a name="RegionCreate"></a><form action="" name="RegionCreate" method="post" onsubmit="return formSubmit(this)" enctype="multipart/form-data">
<table class="form">
						
		{pofile form}		
		<tr>
				<th>Naam</th>
				<td><input type="text" name="region_name" value="{$formdata.region_name|htmlentities:2:'UTF-8'}" id="region_name" onkeyup="revalidate(this.form)" /> <span class="error" id="_err_region_name_0" style="{if !$formerrors.region_name_0}display:none{/if}">##form_required##</span></td>
			</tr>
				
		{if !$hasSubs}
		<tr>
				<th>{if !$hasSubs}Is subniveau van{/if}</th>
				<td>{html_options options=$parents selected=$formdata.parent name='parent' id="parent" onchange="javascript:setLevel(this.value);"} </td>
			</tr>		
		
		<tr>
				<th>Niveau</th>
				<td><span id="level_name">Internationaal</span> </td>
			</tr>
		<tr>
				<th />
				<td><input type="hidden" name="level" value="{$formdata.level|htmlentities:2:'UTF-8'}" id="level" /> <span class="error" id="_err_level_0" style="{if !$formerrors.level_0}display:none{/if}">##form_required##</span></td>
			</tr>
		{else}
		<tr>
				<th>Opmerking</th>
				<td>U kunt het niveau van deze regio niet aanpassen omdat er nog regio's onder hangen </td>
			</tr>
		<tr>
				<th>{if !$hasSubs}Is subniveau van{/if}</th>
				<td><input type="hidden" name="parent" value="{$formdata.parent|htmlentities:2:'UTF-8'}" id="parent" /> </td>
			</tr>			
		<tr>
				<th />
				<td><input type="hidden" name="level" value="{$formdata.level|htmlentities:2:'UTF-8'}" id="level" /> <span class="error" id="_err_level_0" style="{if !$formerrors.level_0}display:none{/if}">##form_required##</span></td>
			</tr>
		{/if}		
		
					
		<tr>
				<th />
				<td><input type="submit" value="Toevoegen" /> </td>
			</tr>
			</table>
</form><script type="text/javascript"><!--
updateVisibility(document.forms['RegionCreate']) //--></script>