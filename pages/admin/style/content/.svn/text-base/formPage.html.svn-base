{pofile form}
{pofile style}
{pofile index}
<form action="" name="{$form.name}" method="post" onsubmit="return formSubmit(this)" enctype="multipart/form-data">
	<h2>##index.title##</h2>
	<table class="form">
		<tr>
			<th>##style.color1##</th>
			<td>{if $form.freeze}{$formdata.color1|htmlentities:2:'UTF-8'}{else}<input type="text" name="color1" value="{$formdata.color1}" id="color1" class="vld_required defErrorHandler" onkeyup="revalidate(this.form)" /> <span class="error" id="_err_color1_invalid" style="{if !$formerrors.color1_invalid}display:none{/if}">##form_regex##</span>{/if}</td>
		</tr>
		<tr>
			<th>##style.color2##</th>
			<td>{if $form.freeze}{$formdata.color2|htmlentities:2:'UTF-8'}{else}<input type="text" name="color2" value="{$formdata.color2}" id="color2" class="vld_required defErrorHandler" onkeyup="revalidate(this.form)" /> <span class="error" id="_err_color2_invalid" style="{if !$formerrors.color2_invalid}display:none{/if}">##form_regex##</span>{/if}</td>
		</tr>
		<tr>
			<th>##style.color3##</th>
			<td>{if $form.freeze}{$formdata.color3|htmlentities:2:'UTF-8'}{else}<input type="text" name="color3" value="{$formdata.color3}" id="color3" class="vld_required defErrorHandler" onkeyup="revalidate(this.form)" /> <span class="error" id="_err_color3_invalid" style="{if !$formerrors.color3_invalid}display:none{/if}">##form_regex##</span>{/if}</td>
		</tr>
		<tr>
			<th>##style.color4##</th>
			<td>{if $form.freeze}{$formdata.color4|htmlentities:2:'UTF-8'}{else}<input type="text" name="color4" value="{$formdata.color4}" id="color4" class="vld_required defErrorHandler" onkeyup="revalidate(this.form)" /> <span class="error" id="_err_color4_invalid" style="{if !$formerrors.color4_invalid}display:none{/if}">##form_regex##</span>{/if}</td>
		</tr>
		<tr>
			<th>##style.color5##</th>
			<td>{if $form.freeze}{$formdata.color5|htmlentities:2:'UTF-8'}{else}<input type="text" name="color5" value="{$formdata.color5}" id="color5" class="vld_required defErrorHandler" onkeyup="revalidate(this.form)" /> <span class="error" id="_err_color5_invalid" style="{if !$formerrors.color5_invalid}display:none{/if}">##form_regex##</span>{/if}</td>
		</tr>
		<tr>
			<th>##style.color6##</th>
			<td>{if $form.freeze}{$formdata.color6|htmlentities:2:'UTF-8'}{else}<input type="text" name="color6" value="{$formdata.color6}" id="color6" class="vld_required defErrorHandler" onkeyup="revalidate(this.form)" /> <span class="error" id="_err_color6_invalid" style="{if !$formerrors.color6_invalid}display:none{/if}">##form_regex##</span>{/if}</td>
		</tr>
		<tr>
			<th>##style.color7##</th>
			<td>{if $form.freeze}{$formdata.color7|htmlentities:2:'UTF-8'}{else}<input type="text" name="color7" value="{$formdata.color7}" id="color7" class="vld_required defErrorHandler" onkeyup="revalidate(this.form)" /> <span class="error" id="_err_color7_invalid" style="{if !$formerrors.color7_invalid}display:none{/if}">##form_regex##</span>{/if}</td>
		</tr>
		<tr>
			<th>##style.color8##</th>
			<td>{if $form.freeze}{$formdata.color8|htmlentities:2:'UTF-8'}{else}<input type="text" name="color8" value="{$formdata.color8}" id="color8" class="vld_required defErrorHandler" onkeyup="revalidate(this.form)" /> <span class="error" id="_err_color8_invalid" style="{if !$formerrors.color8_invalid}display:none{/if}">##form_regex##</span>{/if}</td>
		</tr>
		<tr>
			<th>##style.slogan##</th>
			<td>{if $form.freeze}{$formdata.slogan|htmlentities:2:'UTF-8'}{else}<input type="text" name="slogan" value="{$formdata.slogan}" id="slogan"/>{/if}</td>
		</tr>
		<tr>
			<th>##style.font_family##</th>
			<td>{if $form.freeze}{$formdata.font_family|htmlentities:2:'UTF-8'}{else}<input type="text" name="font_family" value="{$formdata.font_family}" id="font_family"/>{/if}</td>
		</tr>
		<tr>
			<th>##style.font_color##</th>
			<td>{if $form.freeze}{$formdata.font_color|htmlentities:2:'UTF-8'}{else}<input type="text" name="font_color" value="{$formdata.font_color}" id="font_color" class="vld_required defErrorHandler" onkeyup="revalidate(this.form)" /> <span class="error" id="_err_font_color_invalid" style="{if !$formerrors.font_color_invalid}display:none{/if}">##form_regex##</span>{/if}</td>
		</tr>
		<tr>
			<th>##style.font_size##</th>
			<td>{if $form.freeze}{$formdata.font_size|htmlentities:2:'UTF-8'}{else}<input type="text" name="font_size" value="{$formdata.font_size}" id="font_size"/>{/if}</td>
		</tr>
		<tr>
			<th>##style.bg_color##</th>
			<td>{if $form.freeze}{$formdata.bg_color|htmlentities:2:'UTF-8'}{else}<input type="text" name="bg_color" value="{$formdata.bg_color}" id="bg_color" class="vld_required defErrorHandler" onkeyup="revalidate(this.form)" /> <span class="error" id="_err_bg_color_invalid" style="{if !$formerrors.bg_color_invalid}display:none{/if}">##form_regex##</span>{/if}</td>
		</tr>
		<tr>
			<th>##style.fields##</th>
			<td>{if $form.freeze}{$formdata.fields|htmlentities:2:'UTF-8'}{else}<input type="text" name="fields" value="{$formdata.fields}" id="fields" onkeyup="revalidate(this.form)" /> <span class="error" id="_err_fields_invalid" style="{if !$formerrors.fields_invalid}display:none{/if}">##form_regex##</span>{/if}</td>
		</tr>
		{if !$form.freeze}
		<tr>
			<th>##style.logo##</th>
			<td>{if $formdata.logo}<img style="border: 1px solid black; margin-bottom: 5px" src="/files/{$formdata.logo}"/><br/>{/if}<input type="file" name="logo" value="{$formdata.logo|htmlentities:2:'UTF-8'}" id="logo" /><br/>{if isset($formdata.logo) && $formdata.logo != 'wsmr.gif'}<input type="checkbox" name="removeLogo">Logo verwijderen</input>{/if}</td>
		</tr>
		{/if}
		<tr>
			<th/>
			<td><input type="submit" name="submit" value="{$form.submitText}"/></td>
		</tr>
	</table>
</form>
