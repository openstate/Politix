<form action="" name="PartyList">
<h2>Aanstellingen {$region->formatName()}</h2>
<p>
{if $includeExpired}<a href="/appointments/region/{$region->id}?curr">Verberg be&euml;indigde partijen</a>
{else}<a href="/appointments/region/{$region->id}?all">Toon be&euml;indigde partijen</a>{/if}
</p>
	<table class="list">
		<tr>
			<th><a href="?sortcol=name&amp;sort={if $formsort.col=='party_name' and $formsort.dir=='asc'}desc{else}asc{/if}" class="{if $formsort.col=='party_name'}current {$formsort.dir}{else}asc{/if}">Naam</a></th>
		</tr>
		{foreach from=$formdata item=datarow key=id name='dataloop'}
		<tr class="link{cycle values=', alt'}"><td><a href="../party/{$datarow.id}">{$datarow.party_name|htmlentities:2:'UTF-8'|nl2br}</a></td>
		</tr>
		{/foreach}
	</table>
</form>
